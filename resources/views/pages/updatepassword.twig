{% extends "layouts/app.twig" %}

{% set title = user['username'] %}
{% set searchbar = user['username'] %}


{% block content %}

	<div class="w-fit py-2">
		<form action="/update-password" method="POST" class="md:w-[40vw] w-[90vw] space-y-3">
			<div class="flex flex-col items-center">
                <label for="currentpassword">Current Password</label>
                <input type="password" name="currentpassword" id="currentpassword" class="w-2/3 resize-none rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent">
                {% if errors.currentpassword %}
                    <p class="text-red-500">{{ errors.currentpassword }}</p>
                {% endif %}
            </div>
			<div class="flex flex-col items-center">
                <label for="newpassword">New Password</label>
                <input type="password" name="newpassword" id="newpassword" class="w-2/3 resize-none rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent">
                {% if errors.newpassword %}
                    <p class="text-red-500">{{ errors.newpassword }}</p>
                {% endif %}
            </div>
			<div class="flex flex-col items-center">
                <label for="confirmpassword">Repeat Password</label>
                <input type="password" name="confirmpassword" id="confirmpassword" class="w-2/3 resize-none rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent">
                {% if errors.confirmpassword %}
                    <p class="text-red-500">{{ errors.confirmpassword }}</p>
                {% endif %}
            </div>
            <div class="flex flex-col items-center">
                <button type="submit" class="w-1/3 py-2 px-4 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50">Update</button>
            </div>
		</form>
	</div>
{% endblock %}
