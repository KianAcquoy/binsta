<!DOCTYPE html>
<html lang="en">
	<head>
		{% block head %}
			<meta charset="UTF-8">
			<meta http-equiv="X-UA-Compatible" content="IE=edge">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			{% if title %}
				<title>{{ title }}
					- Binsta</title>
			{% else %}
				<title>Binsta</title>
			{% endif %}
			<script src="/resources/js/main.js"></script>
			<script src="/resources/js/highlight.min.js"></script>
            {% block scripts %}{% endblock %}
			<link rel="stylesheet" href="/resources/css/atom-one-dark.min.css">
			<link rel="stylesheet" href="/resources/css/tailwind.css">
			<link rel="stylesheet" href="/resources/css/main.css">
            {% block styles %}{% endblock %}
		{% endblock %}
	</head>
	<body>
		{% if hidenav != true %}
			{% include "components/navbar.twig" %}
			<div class="absolute top-[60px] w-full flex justify-center content-section">
			    <div class="relative">
		{% else %}
            <div class="w-full flex justify-center">
                <div class="w-full relative">
        {% endif %}
                    <div id="popup" class="hidden fixed z-50 top-0 left-0 w-full h-full bg-black bg-opacity-50 flex justify-center items-center">
                        <div class="relative bg-white rounded-lg py-4 md:px-10 px-4 md:w-[40vw] w-[90vw] h-fit max-h-[70vh] md:min-h-[30vh] min-h-[15vh] scrollbar">
                            <div class="flex justify-between items-center pb-4">
                                <div id="popup-title" class="text-xl font-bold"></div>
                                <button onclick="closePopup()" class="text-2xl">&times;</button>
                            </div>
                            <div id="popup-content"></div>
                        </div>
                    </div>
                    {% block content %}{% endblock %}
                </div>
            </div>
            <script>
                inithighlight();
            </script>
	</body>
</html>
