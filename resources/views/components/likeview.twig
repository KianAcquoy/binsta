
{% if likes|length == 0 %}
<div class="text-gray-700 text-sm my-1">
    No likes yet...
</div>
{% endif %}
{% for like in likes %}
    {% set user = users[like['user_id']] %}
        <a href="/users/{{ user['username'] }}">
	<div class="text-gray-700 text-sm my-1 bg-gray-100 hover:bg-gray-200 rounded-md p-3">
        <div class="text-gray-900 font-bold pr-1 flex flex-row items-center">
            <div class="w-9 h-9 rounded-full bg-gray-600 bg-cover bg-center" style="background-image: url('{{ user.avatar }}')"></div>
            <div class="pl-2">{{ user['username'] }}</div>
        </div>
	</div>
        </a>
{% endfor %}
