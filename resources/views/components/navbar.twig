
<script src="/resources/js/navbar.js" defer></script>
<nav class="bg-white border-b border-gray-200 fixed w-full z-10 h-[60px]">
    <div class="container mx-auto flex items-center justify-between px-4 py-2">
        <div class="w-1/3 text-2xl font-bold text-gray-800"><a href="/">Binsta</a></div>
        <div class="w-1/3 flex items-center justify-center">
            <input type="text" placeholder="Search" id="searchbar" class="rounded bg-gray-100 px-4 w-[30vw] md:w-1/2 py-2 border border-gray-300 focus:outline-none focus:border-blue-500" value="{{ searchbar }}">
        </div>
        <div class="w-1/3 flex items-center justify-end">
            <a href="/" class="md:mx-2 mx-1">
                <img class="md:h-7 h-6" src="/resources/icons/home.svg" alt="home">
            </a>
            {% if user() %}
                <a href="/create" class="md:mx-2 mx-1">
                    <img class="md:h-7 h-6" src="/resources/icons/addpost.svg" alt="addpost">
                </a>
                <div class="ml-2 relative">
                    <div class="rounded-full bg-gray-300 h-9 w-9 bg-cover bg-center cursor-pointer" style="background-image: url('{{ user()['avatar'] }}')" onclick="toggleMenu()"></div>
                    <div class="absolute top-10 right-0" style="display:none" id="menu">
                        <div class="bg-gray-200 w-fit py-2 flex flex-col">
                            <a href="/users/{{ user()['username'] }}"><div class="px-4 hover:bg-gray-300">Profile</div></a>
                            <a href="/logout"><div class="px-4 hover:bg-gray-300">Logout</div></a>
                        </div>
                    </div>
                </div>
            {% else %}
                <a href="/login" class="md:mx-2 mx-1">
                    Login
                </a>
            {% endif %}
        </div>
    </div>
</nav>

<script>
    function toggleMenu() {
        let menu = document.getElementById('menu');
        if (menu.style.display == 'none') {
            menu.style.display = 'block';
        } else {
            menu.style.display = 'none';
        }
    }
</script>